{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="p-0 {{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header fixed w-full top-0 left-0 bg-transparent z-20">
			{% block header %}
				<div class="wrapper">
					<nav class="navbar">
						<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
							<a href="{{site.url}}" class="flex items-center">
								<img src="{{ logo }}" class="w-[6.25rem] sm:w-[150px] mr-3" alt="{{site.name}}" />
							</a>
							<button id="navbarToggler" data-collapse-toggle="menu-wrapper" type="button" class="inline-flex items-center p-2 lg:hidden" aria-controls="menu-wrapper" aria-expanded="false">
								<span class="sr-only">Open main menu</span>
								<svg class="open-menu w-[2.625rem] h-[1.4375rem]" xmlns="http://www.w3.org/2000/svg" width="42" height="23" viewBox="0 0 42 23" fill="none">
									<rect width="42" height="5" fill="#B4D43D"/>
									<rect x="13" y="9" width="29" height="5" fill="#B4D43D"/>
									<rect x="5" y="18" width="37" height="5" fill="#B4D43D"/>
								</svg>
								<svg class="close-menu w-[2.625rem] h-[1.4375rem]" width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
									<rect x="3.53516" width="30" height="5" transform="rotate(45 3.53516 0)" fill="#B4D43D"/>
									<rect x="24.749" y="3.53564" width="30" height="5" transform="rotate(135 24.749 3.53564)" fill="#B4D43D"/>
								</svg>
							</button>
							<div id="menu-wrapper" class="hidden lg:flex flex-col items-end md:order-2 w-full md:w-fit">
								<div class="items-center justify-between w-full flex-col order-3 md:flex-row md:flex md:w-auto md:order-1">
									{% include "menu.twig" with {'items': secondary_menu.get_items, 'name': 'secondary-menu' } %}
								</div>
								<hr class="border-top-white border-2 flex w-full md:hidden order-2" />
								<div class="items-center justify-between w-full flex-col order-1 md:flex-row md:flex md:w-auto md:order-2">
									{% include "menu.twig" with {'items': primary_menu.get_items, 'name': 'primary-menu'} %}
								</div>
							</div>
							
						</div>
					</nav>
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{# {% if title %}<h1>{{title}}</h1>{% endif %} #}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		<h1 data-aoe="popIn">
		</h1>

		{% block footer %}
			<footer class="relative angled-top pt-20">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
