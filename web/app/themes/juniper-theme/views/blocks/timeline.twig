{#
 	Title: timeline
 	Description: This displays a configurable timeline
 	Category: formatting
 	Icon: admin-comments
 	Keywords: timeline
 	Mode: edit
 	Align: full
 	PostTypes: page post jobs projects
 	SupportsAlign: left right full
 	SupportsMode: true
 	SupportsMultiple: true
#}

<div class="relative timeline">
	<div class="side-image">
		<div class="side-image-inner">
			<img src="{{ fields.decoration_image.url }}" alt="" />
		</div>
	</div>
	<div class="absolute right-0 top-1/2">
		<svg xmlns="http://www.w3.org/2000/svg" width="223" height="716" viewBox="0 0 223 716" fill="none">
			<path d="M224 3.91654e-05L-9.27608e-05 530.53L224 716L224 3.91654e-05Z" fill="#B4D43D" fill-opacity="0.6"/>
		</svg>
	</div>
	<div class="container mx-auto">
		<div class="mb-5">
			<p class="tagline text">{{ fields.tagline }}</p>
			<h2 class="mb-8 text">{{ fields.title }}</h2>
			<h3 class="mb-8">{{ fields.subtitle }}</h3>
			<div class="mb-20 max-w-[600px]">{{ fields.intro_text }}</div>
		</div>
		<div class="timeline-items flex flex-col">
			{% for timeline_item in fields.timeline_items %}
				<div class="bg-dark w-96 timeline-item inline-flex p-2 items-center">
					<img class="mr-4" height="70" width="70" src="{{timeline_item.icon.url }}" />
					<div>
						<p class="timeline-tagline text-white uppercase">{{ timeline_item.tagline }}</p>
						<p class="timeline-text text-primary font-bold">{{ timeline_item.text }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
