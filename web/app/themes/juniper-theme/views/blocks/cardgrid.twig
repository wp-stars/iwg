{#
 	Title: Card Grid
 	Description: This displays a grid of cards
 	Category: formatting
 	Icon: admin-comments
 	Keywords: card grid column
 	Mode: edit
 	Align: full
 	PostTypes: page post jobs projects
 	SupportsAlign: left right full
 	SupportsMode: true
 	SupportsMultiple: true
#}
<div class="container my-12 mx-auto px-4 cardgrid">
	<div class="max-w-[70%]">
		<p class="uppercase bold">{{ fields.subtitle }}</p>
		<h2>{{ fields.title }}</h2>
		<p class="my-10">{{ fields.intro }}</p>
	</div>
	<div class="grid grid-cols-2 gap-8">
		{% for card in fields.cards %}
			<div class="min-w-[100%] min-h-[300px] flex flex-col max-w-sm p-8 border border-4 border-dark {% if loop.index is odd %}-mt-4 mb-4 justify-self-end bg-white text-dark {% else %}-mb-4 mt-4 even justify-self-start bg-dark text-white {% endif %}">
				<img class="w-fit mb-10" src="{{ card.card_image}}" alt="{{ card.card_title}}" />
				<h3 class="mb-10 font-bold w-fit">{{ card.card_title }}</h3>
				<div class="">{{ card.content }}</div>
				{% if card.link %}
					<a href="{{ card.link.url }}" class="btn btn-underline w-fit mt-auto">{{ card.link.title}}</a>
				{% endif %}
			</div>
		{% endfor %}
	</div>
	{% if fields.footer_link %}
		<a href="{{ fields.footer_link.url }}" class="btn btn-primary w-fit mt-10">{{ fields.footer_link.title }}</a>
	{% endif %}
</div>