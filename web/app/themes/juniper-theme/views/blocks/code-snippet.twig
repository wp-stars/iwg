{#
 	Title: code-snippet
 	Description: Block which shows a code snippet of the project
 	Category: formatting
 	Icon: admin-comments
 	Keywords: code developer technik
 	Mode: edit
 	Align: full
 	PostTypes: page post projects jobs services
 	SupportsAlign: left right full
 	SupportsMode: true
 	SupportsMultiple: true
#}
<section class="code-snippet">
	<div class="container mx-auto py-[10rem]">
		<h2 class="mb-6 text-white">{{fields.title}}</h2>
		<div class="w-[65vw] text-white">{{fields.description}}</div>
		<div class="grid grid-cols-3 mt-[6rem]">
			<div class="col-span-3 md:col-span-1 max-h-[80%]">
				<div class="flex justify-center">
					<img class="w-96 h-auto object-cover" src={{ fields.image.sizes.large }}></div>
			</div>
			<div class="col-span-3 md:col-span-2 mt-5 md:mt-20">
				<pre class="language-{{fields.language}} code-container" >
				<code>{{ fields.code_snippet }}</code>
				</pre>
			</div>
		</div>
	</div>
</section>

