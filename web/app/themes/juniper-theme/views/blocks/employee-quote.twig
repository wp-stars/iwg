{#
 	Title: Employee Quote
 	Description: Quote of a employee about the project
 	Category: formatting
 	Icon: admin-comments
 	Keywords: quote employee project
 	Mode: edit
 	Align: full
 	PostTypes: page post jobs projects services
 	SupportsAlign: left right full
 	SupportsMode: true
 	SupportsMultiple: true
#}

<section class="employee-quote my-20">
	<div class="container mx-auto ">
		<div class="mb-16 mx-[1.25rem] md-mx-[0rem] text-black">
			<h5 class="text-xl uppercase">{{fields.subheadline}}</h5>
			<h2>{{fields.headline}}</h2>
		</div>

		<div class=" grid grid-flow-row-dense grid-cols-12 grid-rows-12 mx-[1.25rem] md-mx-[0rem]">
			<div class=" relative col-span-12 md:col-span-4  ">

				<img class=" w-[100%] md:w-[95%] h-auto object-cover " src={{ fields.image.sizes.large }}>
				
				
				<div class="absolute  top-0 right-[5%]">
					<svg xmlns="http://www.w3.org/2000/svg" width="92" height="100" viewbox="0 0 92 100" fill="none">
						<rect width="92.0471" height="100" fill="#B4D43D"/>
