{#
 	Title: FAQ
 	Description: 
 	Category: formatting
 	Icon: admin-comments
 	Keywords: faq faqs accordion
 	Mode: edit
 	Align: full
 	PostTypes: page post
 	SupportsAlign: left right full
 	SupportsMode: true
 	SupportsMultiple: true
#}


<section class="faq py-[5.5rem] my-[5.5rem] {{ dark_mode }}">
    <div class="container mx-[auto] flex flex-col gap-[4rem]">

	<div >
        <h2 class="mb-8">{{ fields.headline }}</h2>
        <p>{{ fields.content }}</p>
	</div>
        <div id="accordion-collapse" data-accordion="collapse" >
            {% for key, item in fields.questions %}
				<div class="p-[1.5rem]">
                <h3 id="accordion-collapse-heading-{{ key + 1 }}">
                    <button type="button" class="flex items-center justify-between w-full rtl:text-right gap-3 border-b-2 border-gray-200 font-bold bg-[none]" data-accordion-target="#accordion-collapse-body-{{ key + 1 }}" {% if (key + 1) == 1 %} aria-expanded="true" {% else %} aria-expanded="false" {% endif %} aria-controls="accordion-collapse-body-{{ key + 1 }}">
                        <span>{{ item['question'] }}</span>
                        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                        </svg>
                    </button>
                </h3>
                <div id="accordion-collapse-body-{{ key + 1 }}" class="hidden" aria-labelledby="accordion-collapse-heading-{{ key + 1 }}">
                    <div class="p-5">
                        <p class="text-gray-500 ">{{ item['answer'] | raw }}</p>
                    </div>
                </div>
				</div>
            {% endfor %}
        </div>
    </div>
</section>
